@model MVC.Models.LoginViewModel
@{
    ViewBag.Title = "Авторизация на сайте";
}

@Html.ValidationSummary()


@using (Html.BeginForm())
            {
    @Html.AntiForgeryToken();
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
    <center>
        <div class="form-group" style="margin-top:10%; width:350px; ">

            <br />
            <label>E-mail</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @style = "width:300px" })
            <label>Имя</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @style = "width:300px" })
            <label>Пароль</label>
            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @style = "width:300px" })
            <br />

            <div class="editor-field">
                @Html.reCaptcha()
            </div>
            <br />

            <div>
                <button class="btn btn-primary" style="width:100px" type="submit">Войти</button>
                @Html.ActionLink("Зарегистрироваться", "Registrate",null,new  { @class="btn btn-success"  })
               
            </div>
        </div>
    </center>
}