@model  MVC.Models.AppUser

    @using (Ajax.BeginForm("UpdateName", "Wall", new { id = Model.Id }, new AjaxOptions { UpdateTargetId = "results" }))
    {
        <div id="results">
            <div style="width:300px;" class="form-group">
                <label>Name</label>
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })

            </div>

            <div class="form-group">
                <button class="btn btn-primary" type="submit">Update Name</button>
            </div>
            <div style="width:300px" class="form-group">
                @Html.ValidationSummary()
            </div>
        </div>
    }