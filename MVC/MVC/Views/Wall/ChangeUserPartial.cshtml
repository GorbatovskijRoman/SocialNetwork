@model  MVC.Models.AppUser

    @using (Html.BeginForm("Update", "Wall", new { id = Model.Id }))
    {   
            <div style="width:300px;" class="form-group">
                <label>Name</label>
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })

            </div>
            <div style="width:300px" class="form-group">
                <label>OldPass</label>
                @Html.PasswordFor(x => x.OldPass, new { @class = "form-control" })

            </div>
            <div style="width:300px" class="form-group">
                <label>NewPass</label>
                @Html.PasswordFor(x => x.NewPass, new { @class = "form-control" })

            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Update</button>
            </div>
            <div style="width:300px" class="form-group">
                <font color="red">
                    <ul style="list-style-type: none;">
                        <li>  @Html.ValidationMessage("name")</li>
                        <li>  @Html.ValidationMessage("old")</li>
                        <li>  @Html.ValidationMessage("new")</li>
                        <li>  @Html.ValidationMessage("update")</li>
                        <li>  @Html.ValidationMessage("all")</li>
                    </ul>
                </font>
            </div>
    }
