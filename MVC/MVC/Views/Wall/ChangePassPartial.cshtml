@model  MVC.Models.PasswordChangeModel
@using (Ajax.BeginForm("UpdatePass", "Wall", new { id = @ViewBag.ID }, new AjaxOptions { UpdateTargetId = "results" }))
{
    <div id="results">
        <div style="width:300px" class="form-group">
            <label>OldPass</label>
            @Html.PasswordFor(x => x.OldPass, new { @class = "form-control" })

        </div>
        <div style="width:300px" class="form-group">
            <label>NewPass</label>
            @Html.PasswordFor(x => x.NewPass, new { @class = "form-control" })

        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Update Password</button>
        </div>
        <div style="width:300px" class="form-group">
            @Html.ValidationSummary()
        </div>
    </div>
}
