@using MVC.Infrastructure;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Subscribers";
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Wall", "Wall", "Wall")</li>
                <li>@Html.ActionLink("Messages", "Messages", "Wall")</li>
                <li class="active">@Html.ActionLink("Subscribers", "Subscribers", "Wall")</li>
                <li>@Html.ActionLink("Settings", "Settings", "Wall")</li>
                @if (@ViewBag.CurrentUser.Admin)
                {
                    <li class="social pull-right">@Html.ActionLink("Administer", "Index", "Admin")</li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#"><span class="glyphicon glyphicon-user"></span> @ViewBag.CurrentUser.Email</a></li>
                <li>
                    <a href="@Url.Action("Click", "Wall")">
                        LogOut
                        <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>


