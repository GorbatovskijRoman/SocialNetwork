@model MVC.Models.AppUser
@using PagedList.Mvc;
@using MVC.Models;
@using MVC.Infrastructure;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Subscribers";
}

<div style="margin-top:5%;" class="panel panel-primary">
    <div class="panel-heading">Subscribers</div>
    <table class="table table-striped table-hover">
        <tr>
            <th style="min-width: 100px">Id</th>
            <th>Name</th>
            <th style="min-width: 150px"></th>
        </tr>
        @foreach (string item in ViewBag.subscribers)
            {
            <tr>
                <td>@item</td>
                <td>@Html.GetUserName(item)</td>
                <td>
                    @using (Html.BeginForm("UnSubscribe", "Wall", new { BlockId = item,
                        pageNum = (int)(ViewBag.subscribers.PageCount < ViewBag.subscribers.PageNumber ? 0 : ViewBag.subscribers.PageNumber)
                    }))
                    {
                        <button class="btn btn-danger btn-xs" type="submit">Delete</button>
                    }
                </td>
            </tr>
        }
    </table>
</div>
<br />
Page @(ViewBag.subscribers.PageCount < ViewBag.subscribers.PageNumber ? 0 : ViewBag.subscribers.PageNumber) of @ViewBag.subscribers.PageCount

@Html.PagedListPager((PagedList.IPagedList<string>)ViewBag.subscribers, page => Url.Action("Subscribers", new { page }))