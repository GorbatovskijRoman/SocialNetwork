@using MVC.Models;
@model AppUser
@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<div style="margin-top:5%;" class="panel panel-default">
    <table class="table table-striped table-hover">
        <tr>
            <th >Id</th>
            <th>Name</th>
            <th >Email</th>
            <th>Visit</th>
        </tr>
        @if (ViewBag.Users != null)
        {
            foreach (AppUser item in (List<AppUser>)ViewBag.Users)
            {
                <tr>
                    <td>@item.Id</td>
                   <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@Html.ActionLink("Visit", "Wall", "Wall", new { OwnerId = @item.Id }, new { @class = "btn btn-primary" })</td>
                </tr>
            }
        }
    </table>
</div>
<br />