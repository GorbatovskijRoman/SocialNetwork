@model MVC.Models.AppUser
@{
    ViewBag.Title = "Edit User";
}
@Html.ValidationSummary(false)
<div class="row" style="margin-top:10%;">
    <div class="col-md-offset-4 col-md-4">
        <div class="panel panel-default">
            <div class="panel-body" style="background-color:darkgrey">
                <center>
                    <div class="form-group">
                        <p class="form-control-static"><strong>Id</strong> @Model.Id</p>
                    </div>
                    @using (Html.BeginForm())
                    {
                        <table>
                            <tr>
                                <td>
                                    @Html.HiddenFor(x => x.Id)
                                    <div class="form-group">
                                        <label>Name</label>
                                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @style = "width:300px" })
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @style = "width:300px" })
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input name="password" type="password" class="form-control" , style="width:300px" />
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <button type="submit" class="btn btn-primary">Save</button>
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default", @style="margin-left:10px" })
                    }
                </center>
            </div>
        </div>
    </div>
</div>
